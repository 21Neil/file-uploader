generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  username  String  @unique
  password  String
  folder    Folder?
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model File {
  id       Int    @id @default(autoincrement())
  filename String

  folder   Folder @relation(fields: [folderId], references: [id])
  folderId Int
}

model Folder {
  id   Int    @id @default(autoincrement())
  name String

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  subFolders     Folder[] @relation("parentSub")
  parentFolder   Folder?  @relation("parentSub", fields: [parentFolderId], references: [id])
  parentFolderId Int?

  items File[]

  @@unique([parentFolderId, name])
}
